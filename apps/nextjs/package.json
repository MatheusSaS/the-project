  "eslintConfig": {
    "root": true,
    "extends": [
      "@theproject/eslint-config/base",
      "@theproject/eslint-config/nextjs",
      "@theproject/eslint-config/react"
    ]
  },
  "prettier": "@theproject/prettier-config"
